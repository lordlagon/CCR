<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Core.HomePage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Image WidthRequest="200" HeightRequest="200" HorizontalOptions="Center" VerticalOptions="End" Source="ic_logo" />
            <Label Text="Olá, Fulano" Padding="0,10" HorizontalOptions="Center" FontSize="Large"/>
            <Button Margin="0,0,0,20" Command="{Binding MyAccountCommand}" Text="Meu Perfil" BackgroundColor="Red" TextColor="White" CornerRadius="25"  HeightRequest="55"/>
            <Button Margin="0,0,0,20" Command="{Binding ParadasCommand}" Text="Pontos de Parada" BackgroundColor="Red" TextColor="White" CornerRadius="25"  HeightRequest="55"/>
            <Button Margin="0,0,0,20" Command="{Binding CuponsCommand}" Text="Pague Rapido" BackgroundColor="Red" TextColor="White" CornerRadius="25"  HeightRequest="55"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>